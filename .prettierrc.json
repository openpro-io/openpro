{
  "semi": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "singleQuote": true,
  "overrides": [
    {
      "files": ["backend/**/*.ts"],
      "options": {
        "printWidth": 120,
        "importOrder": ["^[./]"],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "plugins": ["@trivago/prettier-plugin-sort-imports"]
      }
    },
    {
      "files": ["frontend/**/*.{tsx,ts}"],
      "options": {
        "jsxSingleQuote": true,
        "importOrder": ["^@/(.*)$", "^[./]"],
        "importOrderSeparation": true,
        "importOrderSortSpecifiers": true,
        "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"]
      }
    }
  ]
}
