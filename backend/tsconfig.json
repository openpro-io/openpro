{
  "ts-node": {
    "swc": true,
    "esm": true
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}
